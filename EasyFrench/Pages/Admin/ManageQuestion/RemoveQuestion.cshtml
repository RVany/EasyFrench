@page
@model EasyFrench.Pages.Admin.ManageQuestion.RemoveQuestionModel
@{
    ViewData["Title"] = "RemoveQuestion";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<h3>@Model.Message</h3>
@if (Model.isAdmin)
{
    <h2>Remove Question</h2>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Question</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Question.QuestionEnglish)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Question.QuestionEnglish)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Question.QuestionFrench)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Question.QuestionFrench)
            </dd>
            <dt class="col-sm-2">
                Exercise
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Question.Exercise.TitleEnglish)
            </dd>
            <dt class="col-sm-2">
                Topic
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Question.Exercise.Topic.TitleEnglish)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Question.ID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./ListLevel">Back to List</a>
        </form>
    </div>

}
