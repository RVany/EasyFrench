@page
@model EasyFrench.Pages.Admin.ManageExersice.AddExerciseModel
@{
    ViewData["Title"] = "AddExercise";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h3>@Model.Message</h3>
@if (Model.isAdmin)
{
 <h2>Add Exercise</h2>
 <div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Exercise.TitleEnglish" class="control-label"></label>
                <input asp-for="Exercise.TitleEnglish" class="form-control" />
                <span asp-validation-for="Exercise.TitleEnglish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exercise.TitleFrench" class="control-label"></label>
                <input asp-for="Exercise.TitleFrench" class="form-control" />
                <span asp-validation-for="Exercise.TitleFrench" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exercise.Description" class="control-label"></label>
                <input asp-for="Exercise.Description" class="form-control" />
                <span asp-validation-for="Exercise.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exercise.Topic" class="control-label"></label>
                <select asp-for="Exercise.TopicID" class="form-control"
                        asp-items="@Model.TopicsSL">
                    <option value="">-- Select the Topic --</option>
                </select>
                <span asp-validation-for="Exercise.TopicID" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="ListExercise">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

}

