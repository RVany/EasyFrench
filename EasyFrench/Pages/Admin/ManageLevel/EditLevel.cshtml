@page
@model EasyFrench.Pages.Admin.ManageLevel.EditLevelModel
@{
    ViewData["Title"] = "EditLevel";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h3>@Model.Message</h3>
@if (Model.isAdmin)
{
    <h2>Edit Level</h2>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Level.ID" />
                <div class="form-group">
                    <label asp-for="Level.Title" class="control-label"></label>
                    <input asp-for="Level.Title" class="form-control" />
                    <span asp-validation-for="Level.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Level.Description" class="control-label"></label>
                    <input asp-for="Level.Description" class="form-control" />
                    <span asp-validation-for="Level.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./ListLevel">Back to List</a>
    </div>
}
